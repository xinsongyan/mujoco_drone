<mujoco model="quadcopter">
  <option gravity="0 0 -9.81" timestep="0.002"/>

  <asset>
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3" markrgb="0.8 0.8 0.8" width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>

    <texture name="prop_tex" type="2d" builtin="checker" width="64" height="64" rgb1="0.8 0.8 0.8" rgb2="0 0 0"/>
    <material name="prop_mat" texture="prop_tex" texrepeat="1 1" texuniform="true"/>
  </asset>

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global azimuth="-20" elevation="-20" ellipsoidinertia="true"/>
  </visual>

  <worldbody>
    <light pos="0 0 1.5" dir="0 0 -1" directional="true"/>

    <geom name="floor" size="0 0 0.05" type="plane" material="groundplane"/>

    <body name="world_frame" pos="0 0 0">
      <geom type="sphere" size="0.01" rgba="1 1 1 1" contype="0" conaffinity="0"/>
      <geom type="cylinder" fromto="0 0 0 0.4 0 0" size="0.003" rgba="1 0 0 1" contype="0" conaffinity="0"/>
      <geom type="cylinder" fromto="0 0 0 0 0.4 0" size="0.003" rgba="0 1 0 1" contype="0" conaffinity="0"/>
      <geom type="cylinder" fromto="0 0 0 0 0 0.4" size="0.003" rgba="0 0 1 1" contype="0" conaffinity="0"/>
    </body>

    <body name="base" pos="0 0 0.1">
      <freejoint/>

      <geom name="chassis" type="box" size=".1 .05 .02" rgba="0.2 0.2 0.2 0.5" mass="0.25"/>

      <site name="body_frame" pos="0 0 0"/>
      <geom type="sphere" size="0.01" rgba="1 1 1 1" contype="0" conaffinity="0"/>
      <geom type="cylinder" fromto="0 0 0 0.2 0 0" size="0.003" rgba="1 0 0 1" contype="0" conaffinity="0"/>
      <geom type="cylinder" fromto="0 0 0 0 0.2 0" size="0.003" rgba="0 1 0 1" contype="0" conaffinity="0"/>
      <geom type="cylinder" fromto="0 0 0 0 0 0.2" size="0.003" rgba="0 0 1 1" contype="0" conaffinity="0"/>

      <body name="rotor_rr" pos="-0.1 -0.1 0">
        <joint name="j_rr" type="hinge" axis="0 0 1" damping="0.02"/>
        <inertial pos="0 0 0" mass="0.05" diaginertia="5e-6 5e-6 9e-6"/>
        <geom type="cylinder" size=".05 .001" rgba="0.8 0.8 0.8 0.8" material="prop_mat"/>
        <site name="motor_rr" type="cylinder" size="0.01 0.003" pos="0 0 0"/>
      </body>

      <body name="rotor_fr" pos="0.1 -0.1 0">
        <joint name="j_fr" type="hinge" axis="0 0 1" damping="0.02"/>
        <inertial pos="0 0 0" mass="0.05" diaginertia="5e-6 5e-6 9e-6"/>
        <geom type="cylinder" size=".05 .001" rgba="0.8 0.8 0.8 0.8" material="prop_mat"/>
        <site name="motor_fr" type="cylinder" size="0.01 0.003" pos="0 0 0"/>
      </body>

      <body name="rotor_rl" pos="-0.1 0.1 0">
        <joint name="j_rl" type="hinge" axis="0 0 1" damping="0.02"/>
        <inertial pos="0 0 0" mass="0.05" diaginertia="5e-6 5e-6 9e-6"/>
        <geom type="cylinder" size=".05 .001" rgba="0.8 0.8 0.8 0.8" material="prop_mat"/>
        <site name="motor_rl" type="cylinder" size="0.01 0.003" pos="0 0 0"/>
      </body>

      <body name="rotor_fl" pos="0.1 0.1 0">
        <joint name="j_fl" type="hinge" axis="0 0 1" damping="0.02"/>
        <inertial pos="0 0 0" mass="0.05" diaginertia="5e-6 5e-6 9e-6"/>
        <geom type="cylinder" size=".05 .001" rgba="0.8 0.8 0.8 0.8" material="prop_mat"/>
        <site name="motor_fl" type="cylinder" size="0.01 0.003" pos="0 0 0"/>
      </body>

    </body>

  </worldbody>

  <actuator>
    <motor name="motor_rr" site="motor_rr" gear="0 0 1 0 0 0.02" ctrllimited="true" ctrlrange="-1000 1000"/>
    <motor name="motor_fr" site="motor_fr" gear="0 0 1 0 0 -0.02" ctrllimited="true" ctrlrange="-1000 1000"/>
    <motor name="motor_rl" site="motor_rl" gear="0 0 1 0 0 -0.02" ctrllimited="true" ctrlrange="-1000 1000"/>
    <motor name="motor_fl" site="motor_fl" gear="0 0 1 0 0 0.02" ctrllimited="true" ctrlrange="-1000 1000"/>
  </actuator>


  <sensor>
    <accelerometer name="accel" site="body_frame" noise="0.005" cutoff="100"/>
    <gyro name="gyro" site="body_frame" noise="0.005" cutoff="100"/>
    <framequat name="quat" objtype="site" objname="body_frame"/>
  </sensor>


</mujoco>